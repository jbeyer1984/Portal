{% extends 'AcmePortalBundle:Default:master.html.twig'  %}

{% block headCss %}
  <link rel="stylesheet" href="{{ asset('bundles/sonatacore/select2/select2.css') }}"/>
{% endblock %}

{% block body %}
  already existing Tag
  <div class="tagCollection">
    {% for tag in tagList %}
      <div class="tag">{{ tag.name }}</div>
    {% endfor %}
  </div>

  
  <div class="action"><p>new Tag</p></div>
  <div class="tags_container">
    <form method="POST" action="{{ path('acme_tag_new') }}" {{ form_enctype(form) }}>
      <div class="updateAndDelete">
        <div class="input">
          <ul>
            <li>{{ form_row(form.name) }}</li>
          </ul>
        </div>
      </div>
      {{ form_rest(form) }}
      <input type="submit" value="create" class="btn btn-default pull-right" />
    </form>
  </div>
{% endblock %}

{% block customJavascript %}
  <script type="text/javascript" src="{{ asset('bundles/acmeportal/js/select2Manager.js') }}"></script>
{% endblock %}